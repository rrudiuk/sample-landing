.header-wrapper
	width 100%
	height 1000px
	background url('../img/general/header-bg.jpg') 0 0 no-repeat
	background-size cover
	
.header-main
	width 97%
	max-width 1170px
	margin 0 auto
.header-top
	padding-top 55px
	text-transform uppercase
	font-size 1.13rem
	font-weight bold
	font-family SourceSansProBold, sans serif
	overflow hidden
.main-nav
	float right
	&.active
		.nav-toggle_line--top
			top 10px
			transition .5s
			transform rotate(45deg)
		.nav-toggle_line--middle
			top 9px
			opacity 0
			transition .5s
		.nav-toggle_line--bottom
			top 10px
			transition .5s
			transform rotate(-45deg)
		.main-nav_item
			display inline-block
	li
		margin-right 20px
		a
			color blackColor
.main-nav_item
			display none

.header-content
	display block
	position relative
	float right
	margin-top 350px
	font-size 1.13rem
	text-align right
	.header-title
		display block
		font-size 4.5rem
		font-family SourceSansProBold
		text-transform uppercase
		margin-bottom 30px
	.header-title_underline
		display block
		position absolute
		right 0
		width 138px
		height 4px
		background url('../img/content/ht-underline.png') 0 0 no-repeat
	p
		position relative
		top 50px
		line-height 2
		margin-bottom 115px
	a
		position absolute
		right 0
		display block
		width 270px
		height 50px
		border 2px solid #232323
		text-align center
		font-weight bold
		padding-top 13px
		color blackColor

.header-nav_toggle
	display inline-block
	position relative
	width 15px
	height 15px
	cursor pointer

.nav-toggle_line
	position absolute
	width 100%
	height 2px
	display block
	background-color blackColor
		

.nav-toggle_line--top
	top 4px
	transition 1s
.nav-toggle_line--middle
	top 9px
	opacity 1
	transition 1s
.nav-toggle_line--bottom
	top 14px
	transition 1s