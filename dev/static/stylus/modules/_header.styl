.header-wrapper
	width 100%
	height 1000px
	background url('../img/general/header-bg.jpg') 0 0 no-repeat
	background-size cover
	
.header-main
	width 100%
	max-width 1170px
	margin 0 auto
.header-top
	padding-top 55px
	text-transform uppercase
	font-size 1.13rem
	font-weight bold
	font-family SourceSansProBold, sans serif
.main-nav
	float right
	overflow hidden
	li
		display inline-block
		margin-right 20px
		a
			color blackColor
		&:last-child
			margin-right 0
			cursor pointer
			sprite($s-header-nav)
.header-content
	display block
	position relative
	float right
	margin-top 350px
	font-size 1.13rem
	text-align right
	.header-title
		display block
		font-size 4.5rem
		font-family SourceSansProBold
		text-transform uppercase
		margin-bottom 30px
	.header-title_underline
		display block
		position absolute
		right 0
		width 138px
		height 4px
		background url('../img/content/ht-underline.png') 0 0 no-repeat
	p
		position relative
		top 50px
		line-height 2
		margin-bottom 115px
	a
		position absolute
		right 0
		display block
		width 270px
		height 50px
		border 2px solid #232323
		text-align center
		font-weight bold
		padding-top 13px
		color blackColor