footer
	background blackColor
	color footerTextColor

.footer
	padding-top 77px
	width 97%
	max-width 1170px
	margin 0 auto
	border-bottom solid 1px footerUnderline
	
.footer-main,
.footer-nav
	display inline-block
	vertical-align top
	
.footer-main
	width 49%
	max-width 550px
	padding-right 9%
	p,
	a
		font-size .875rem
		line-height 1.5
		color footerTextColor
.footer-main
	p
		margin-bottom 45px
.footer-main_menu
	padding-right 5%
.footer-nav
	padding-right 7%
	margin-right 15%
	&:last-child
		margin-right 0

.footer-main_title,
.footer-nav_title
	text-transform uppercase
	color featuredColor
	display block
	
.footer-main_title
	font-size 1.375rem
	margin-bottom 35px

.footer-nav_title
	font-size .94rem
	margin-bottom 40px
	
.footer-form
	font-size .875rem
	position relative

.footer-form_line
	overflow hiddden
	
.footer-form_input,
.footer-form_text
	border none
	border-bottom solid 1px footerUnderline
	background blackColor
	color footerTextColor


.footer-form_input
	float left
	width 45%
	margin-right 10%
	padding-bottom 5px
	margin-bottom 22px
	&:last-child
		margin 0

.footer-form_text
	width 100%
	height 25px
	margin-bottom 70px

.footer-form_btn
	width 100%
	height 46px
	padding-top 22px
	&:after
		content ''
		position absolute
		bottom 10px
		width 0
		height 0
		border-style solid
		border-width 5px 0 5px 6px
		border-color transparent transparent transparent #999999
	input
		border none
		background none
		color footerTextColor
		cursor pointer
		
.footer-bottom
	width 97%
	max-width 1170px
	margin 0 auto
	padding-top 35px
	overflow hidden
	padding-bottom 40px
	span
		display block
		font-size .875rem
		margin-bottom 14px
	
.footer-bottom_content
	float left

.footer-bottom-nav
	float right
	

.footer-bottom_content,
.footer-bottom-nav
	p,
	a
		font-size .875rem
		line-height 1.5
		color footerTextColor

.footer-bottom-nav_item
	display inline-block
	text-transform uppercase
	text-align right
	margin-left 30px
	line-height 2
	&:first-child
		margin-left 0