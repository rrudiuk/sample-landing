@media screen and (max-width 1220px)
	.section-wrap
		.feature-list
			.feature
				margin 80px 25px 0
		.blog
			.blog-post
				padding-top 50px
	.footer-main_menu
		padding-right 0
		.footer-nav
			padding-right 5%
			margin-right 8%
				
@media screen and (max-width 1020px)
	.section-wrap
		.feature-list
			.feature
				width 100%
				max-width 200px
				margin 80px 25px 0
		.blog
			.blog-post
				padding-top 15px
			.blog_title
				margin-bottom 30px
				
@media screen and (max-width 880px)
	.section-wrap
		.blog
			.blog_date
				margin-bottom 15px
