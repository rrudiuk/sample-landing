					width 100%
					max-width 150px
					margin 40px 25px 0
					.feature-header
						font-size 1rem
						margin-bottom 20px
					.feature-content
						font-size .875rem
			.blog
				.blog_date
					margin-bottom 10px
				.blog_title
					margin-bottom 10px
					font-size 1rem
				.blog_description
					line-height 1.5				
	.projects-wrap
		.projects-details
			.projects-details-list
				text-align center
				padding 70px 0 65px
				li
					width 40%
					max-width 320px
					padding 0 0 35px
	.footer-bottom
		padding-top 20px
		.footer-bottom-nav,
		.footer-bottom_content
			float none
		.footer-bottom-nav
			margin-bottom 15px
		
