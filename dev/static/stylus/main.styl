  margin-bottom 45px

.mb50
  margin-bottom 50px
  
.mb60
  margin-bottom 60px
  
.mb70
  margin-bottom 70px

.mb80
  margin-bottom 80px
  
.mb110
  margin-bottom 110px
  
.mb120
  margin-bottom 120px
  
.mt110
  margin-top 110px

.pt70
  padding-top 70px
  
.pt80
  padding-top 80px

.pt115
  padding-top 115px
  
.pb30
  padding-bottom 30px
  
.pb70
  padding-bottom 70px
  
.pb100
  padding-bottom 100px

.pb115
  padding-bottom 115px
  
.pb120
  padding-bottom 120px

.pb140
  padding-bottom 140px




